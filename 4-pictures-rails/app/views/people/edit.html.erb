
<% form_for @person do |f| %>
<table>
    <tr><td>First Name:</td><td><%= f.text_field :first_name %></td></tr>
	<tr><td>Last Name:</td><td><%= f.text_field :last_name %></td></tr>
	<tr><td>Email:</td><td><%= f.text_field :email %></td></tr>	
	<tr><td>Password:</td><td><%= f.password_field :password %></td></tr>	
	<tr><td>Retype Password:</td><td><%= f.password_field :password_confirmation %></td></tr>			
  </table>
<%= submit_tag "Save" %>
	
<% end %>

