<% unless picture_index_title.blank? %>
  <h2><%= picture_index_title %></h2>
<% end %>

<div id="tag_cloud">
  tags: <%= render :partial => 'tags/cloud' %>
</div>

<% if @pictures.size > 0 %>
<div id="featured_picture">
  <%= render :partial => 'thumbnail_picture', :locals => {:picture => @pictures.first, :width => 560, :height => 420, :thumbnail => :false } %>
</div>
<% end %>

<div id="recent_pictures">
  <% @pictures = ([@pictures[1..3]] << @pictures[4..6] << @pictures[7..9] << @pictures[10..12]) %>
  <table cellpadding="0" cellspacing="0" border="0">
    <% @pictures.each do |pictures| %>
      <tr>
        <% unless pictures.nil? %>
          <% pictures.each do |picture| %>
            <td><%= render :partial => 'thumbnail_picture', :locals => {:picture => picture} %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>

<div class="clear">&nbsp;</div>

<h3>albums</h3>
<div id="recent_albums">
  <table cellpadding="0" cellspacing="0" border="0">
    <tr>
      <% @albums.each do |album| %>
        <td><%= render :partial => 'thumbnail_album', :locals => {:album => album} %></td>
      <% end %>
    </tr>
  </table>
</div>
